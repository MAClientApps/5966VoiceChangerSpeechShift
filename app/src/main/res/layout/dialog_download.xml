<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/bg_corner_10"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:padding="10dp"
        android:tag="layout/dialog_audio_not_saved_0">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/proxima_nova_condensed_bold"
            android:text="@string/Download"
            android:textColor="@color/black"
            android:textSize="@dimen/_19ssp" />

        <RelativeLayout
            android:id="@+id/rlyEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt1"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_corner_10"
            android:backgroundTint="@color/bgUnselected">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:backgroundTint="@android:color/transparent"
                android:ellipsize="end"
                android:fontFamily="@font/proxima_nova_semibold"
                android:paddingStart="16dp"
                android:paddingEnd="45dp"
                android:singleLine="true"
                android:textColor="@color/grayText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="5dp"
                android:src="@drawable/ic_close"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlyEdit"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:fontFamily="@font/proxima_nova_semibold"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_record"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/grayText"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_set"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:fontFamily="@font/proxima_nova_semibold"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_gradient"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>

</layout>
