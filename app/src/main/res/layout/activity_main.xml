<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:tag="layout/activity_main_0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/toolbar"
                layout="@layout/layout_app_bar_main"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/ads"
                android:layout_below="@+id/toolbar"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:id="@+id/ll_record"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_main_bg_1_record_audio"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical">


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="64dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_main_icon1_record_voice" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgIcon"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/proxima_nova_condensed_bold"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="@string/record_voice"
                                android:textColor="@color/white"
                                android:textSize="19sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ll_open_file"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_main_bg_2_voice_effect"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical">


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgIcon2"
                                android:layout_width="wrap_content"
                                android:layout_height="64dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_main_icon2_change_voice" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgIcon2"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/proxima_nova_condensed_bold"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="@string/change_voice"
                                android:textColor="@color/white"
                                android:textSize="19sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ll_text_audio"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_main_bg_3_text_to_audio"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical">


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgIcon3"
                                android:layout_width="wrap_content"
                                android:layout_height="64dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_main_icon3_text_audio" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgIcon3"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/proxima_nova_condensed_bold"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="@string/text_to_audio"
                                android:textColor="@color/white"
                                android:textSize="19sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ll_my_voice"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_main_bg_4_my_studio"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical">


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgIcon1"
                                android:layout_width="wrap_content"
                                android:layout_height="64dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_main_icon4_my_voice" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgIcon1"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/proxima_nova_condensed_bold"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="@string/my_voice"
                                android:textColor="@color/white"
                                android:textSize="19sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <FrameLayout
                android:id="@+id/ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:visibility="visible">


                <RelativeLayout
                    android:id="@+id/ll_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:visibility="visible" />

            </FrameLayout>

        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:orientation="vertical">

                <include
                    android:id="@+id/layout_content"
                    layout="@layout/layout_drawer" />

            </LinearLayout>

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>
